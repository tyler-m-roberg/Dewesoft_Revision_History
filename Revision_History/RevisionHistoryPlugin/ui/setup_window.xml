<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://mui.dewesoft.com/schema/1.1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100%"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100%"/>
        </Grid.RowDefinitions>

        <CaptionPanel Grid.Row="0" Grid.Column="0" Title="Version Tracking" Name="versionTrackingPanel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="1" Grid.Row="2" Name="txtMajor" />
                <TextBox Grid.Column="3" Grid.Row="2"  Name="txtMinor"/>
                <TextBox Grid.Column="5" Grid.Row="2"  Name="txtRevision"/>
                <TextBox Grid.Column="7" Grid.Row="2"  Name="txtBuild"/>

                <Label Text="Major" Grid.Column="1" Grid.Row="0" />
                <Label Text="Minor" Grid.Column="3" Grid.Row="0"/>
                <Label Text="Revision" Grid.Column="5" Grid.Row="0"/>
                <Label Text="Build Number" Grid.Column="7" Grid.Row="0"/>

            </Grid>
        </CaptionPanel>
        <CaptionPanel Grid.Row="1" Grid.Column="0" Title="Revisions" Name="revisionPanel">
            <Grid>
                <Memo Height="100" Width="200" Name="revisionHistoryMemo" />
            </Grid>
        </CaptionPanel>
    </Grid>    
</Window>
